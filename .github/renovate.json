{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "suppressNotifications": [
    "prEditedNotification",
    "prIgnoreNotification"
  ],
  "rebaseWhen": "conflicted",
  "assigneesFromCodeOwners": true,
  "reviewersFromCodeOwners": true,
  "ignorePaths": [
    "**/*.sops.*",
    "docker/**/compose.yaml"
  ],
  "flux": {
    "fileMatch": [
      "(^|/)kubernetes/.+\\.ya?ml$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "(^|/)kubernetes/.+\\.ya?ml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "(^|/)talos/.+\\.ya?ml$",
      "(^|/)kubernetes/.+\\.ya?ml$"
    ]
  }
}
