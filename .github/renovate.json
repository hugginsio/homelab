{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    "github>home-operations/renovate-config:semanticCommits.json5",
    "github>hugginsio/homelab//.renovate/autoMerge.json",
    "github>hugginsio/homelab//.renovate/changelogs.json",
    "github>hugginsio/homelab//.renovate/customManagers.json",
    "helpers:pinGitHubActionDigests",
    "replacements:k8s-registry-move"
  ],
  "suppressNotifications": [
    "prEditedNotification",
    "prIgnoreNotification"
  ],
  "rebaseWhen": "conflicted",
  "reviewersFromCodeOwners": true,
  "ignorePaths": [
    "**/*.sops.*",
    "docker/"
  ],
  "flux": {
    "managerFilePatterns": [
      "/(^|/)kubernetes-flux/.+\\.ya?ml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/(^|/)kubernetes-flux/.+\\.ya?ml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/(^|/)kubernetes-flux/.+\\.ya?ml$/"
    ]
  }
}
